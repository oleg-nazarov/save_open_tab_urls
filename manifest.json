{
    "name": "Save Open Tab URLs",
    "description": "Save open tab URLs and re-open them on another PC, on the same PC but another OS, or when they've lost.",
    "version": "1.0.0",
    "manifest_version": 3,
    "permissions": ["tabs"],
    "action": {
        "default_popup": "main.html",
        "default_icon": {
            "16": "/images/icon_16.png",
            "32": "/images/icon_32.png",
            "48": "/images/icon_48.png",
            "128": "/images/icon_128.png"
        }
    },
    "icons": {
        "16": "/images/icon_16.png",
        "32": "/images/icon_32.png",
        "48": "/images/icon_48.png",
        "128": "/images/icon_128.png"
    }
}
